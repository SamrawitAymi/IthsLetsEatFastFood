@model IEnumerable<IthsLetsEatFastFood.Models.FoodProduct>

@{
    ViewData["Title"] = "FoodProducts";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="d-flex flex-row justify-content-around align-content-around flex-wrap">
    @foreach (var item in ViewData["FoodProds"] as List<FoodProduct>)
    {
    <div class="card flex-grow-0 flex-shrink-1 m-1" style="flex-basis:300px">
        <img src="@item.ImageUrl" alt="@item.Name" class="card-img-top" />
        <div class="card-body">
            <h3 class="card-title">@item.Name</h3>
            <p class="card-title"@item.Description></p>
            <p>
                @item.Price.ToString("C")
                @if(User.Identity.IsAuthenticated)
                {
                    <span class="float-right">@Html.ActionLink("Buy","AddToCart", "FoodProduct", new { id = item.Id }, new { @class = "btn btn-success" })
                    </span>
                }
            </p>
        </div>
    </div>
    }
</div>
